{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run(Debug)",
			"type": "shell",
			"command": "ulimit -s 1048576 && cargo run --bin ${fileBasenameNoExtension} < test/in",
			"dependsOn": "Build(Debug)",
		},
		{
			"label": "Run(Release)",
			"type": "shell",
			"command": "ulimit -s 1048576 && /usr/bin/time -v cargo run --bin ${fileBasenameNoExtension} --release <test/in 2> >(awk '/User/||/System/||/Elap/||/Max/')",
		},
		{
			"label": "RunAll(Debug)",
			"type": "shell",
			"command": "ulimit -s 1048576 && tool/tc.sh 'cargo run --bin ${fileBasenameNoExtension} -q'",
		},
		{
			"label": "RunAll(Release)",
			"type": "shell",
			"command": "ulimit -s 1048576 && tool/tc.sh 'cargo run --bin ${fileBasenameNoExtension} --release -q'",
		},
		{
			"label": "Build(Debug)",
			"type": "shell",
			"command": "echo '/* ORIGINAL SOURCE CODE' > submit.rs && cat ${relativeFile} >> submit.rs && echo '*/' >> submit.rs && cargo equip --bin ${fileBasenameNoExtension} --minify libs --remove docs >> submit.rs && cargo build --bin ${fileBasenameNoExtension}",
		},
		{
			"label": "tc_save",
			"type": "shell",
			"command": "node tool/tcsaver.js",
			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	],
}